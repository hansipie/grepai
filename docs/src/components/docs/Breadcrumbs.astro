---
interface Props {
  section?: string;
  title: string;
}

const { section, title } = Astro.props;
---

<nav class="flex items-center gap-2 text-sm text-gray-500 mb-6" aria-label="Breadcrumb">
  <a href="/grepai/" class="hover:text-gray-300 transition-colors">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
      <polyline points="9 22 9 12 15 12 15 22" />
    </svg>
  </a>

  <span class="text-gray-600">/</span>

  {section && (
    <>
      <span class="text-gray-400">{section}</span>
      <span class="text-gray-600">/</span>
    </>
  )}

  <span class="text-gray-300 font-medium truncate max-w-[200px]" title={title}>
    {title}
  </span>
</nav>
