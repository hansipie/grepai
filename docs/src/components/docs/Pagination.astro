---
import { findPrevNext } from '../../utils/navigation';

interface Props {
  currentSlug?: string;
}

const { currentSlug = '' } = Astro.props;
const { prev, next } = findPrevNext(currentSlug);
---

{(prev || next) && (
  <nav class="flex items-center justify-between mt-16 pt-8 border-t border-glass-border">
    {prev ? (
      <a
        href={prev.href}
        class="group flex items-center gap-3 p-4 rounded-xl glass glass-hover max-w-[45%]"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="text-gray-500 group-hover:text-primary-400 transition-colors"
        >
          <path d="m15 18-6-6 6-6" />
        </svg>
        <div class="text-right">
          <span class="text-xs text-gray-500 block">Previous</span>
          <span class="text-sm font-medium text-gray-300 group-hover:text-white transition-colors truncate block">
            {prev.label}
          </span>
        </div>
      </a>
    ) : (
      <div></div>
    )}

    {next ? (
      <a
        href={next.href}
        class="group flex items-center gap-3 p-4 rounded-xl glass glass-hover max-w-[45%] ml-auto"
      >
        <div class="text-left">
          <span class="text-xs text-gray-500 block">Next</span>
          <span class="text-sm font-medium text-gray-300 group-hover:text-white transition-colors truncate block">
            {next.label}
          </span>
        </div>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="text-gray-500 group-hover:text-primary-400 transition-colors"
        >
          <path d="m9 18 6-6-6-6" />
        </svg>
      </a>
    ) : (
      <div></div>
    )}
  </nav>
)}
