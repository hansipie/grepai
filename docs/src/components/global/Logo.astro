---
interface Props {
  size?: number;
  animated?: boolean;
}

const { size = 32, animated = false } = Astro.props;
---

<div class:list={['inline-flex items-center gap-2', { 'animate-glow animate-float': animated }]}>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width={size}
    height={size}
    viewBox="0 0 24 24"
    fill="none"
    stroke="url(#logoGradient)"
    stroke-width="1.5"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="shrink-0"
  >
    <defs>
      <linearGradient id="logoGradient" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#818cf8" />
        <stop offset="50%" style="stop-color:#a78bfa" />
        <stop offset="100%" style="stop-color:#c084fc" />
      </linearGradient>
    </defs>
    <circle cx="11" cy="11" r="8" />
    <path d="m21 21-4.3-4.3" />
    <path d="M11 8a3 3 0 0 0-3 3" />
    <path d="M8 6h.01" />
    <path d="M14 6h.01" />
    <path d="M6 14h.01" />
    <path d="M14 14h.01" />
  </svg>
  <span class="font-bold text-xl gradient-text">grepai</span>
</div>
