---
// Steps component wrapper
---

<div class="steps-container my-8">
  <slot />
</div>

<style>
  .steps-container :global(ol) {
    list-style: none;
    padding: 0;
    margin: 0;
    counter-reset: steps;
  }

  .steps-container :global(ol > li) {
    position: relative;
    padding-left: 3rem;
    padding-bottom: 2rem;
    counter-increment: steps;
  }

  .steps-container :global(ol > li:last-child) {
    padding-bottom: 0;
  }

  .steps-container :global(ol > li::before) {
    content: counter(steps);
    position: absolute;
    left: 0;
    top: 0;
    width: 2rem;
    height: 2rem;
    background: linear-gradient(135deg, #4f46e5, #7c3aed);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 0.875rem;
    color: white;
    box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
  }

  .steps-container :global(ol > li::after) {
    content: '';
    position: absolute;
    left: calc(1rem - 1px);
    top: 2.5rem;
    width: 2px;
    height: calc(100% - 2.5rem);
    background: linear-gradient(to bottom, rgba(99, 102, 241, 0.4), transparent);
  }

  .steps-container :global(ol > li:last-child::after) {
    display: none;
  }

  .steps-container :global(ol > li > strong:first-child) {
    display: block;
    color: #f5f5f5;
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }

  .steps-container :global(pre) {
    margin-top: 0.75rem;
  }
</style>
